$(document).ready(function()
{
  // REVEALS TRASH LINK WHEN MOUSE OVER CARD
  $("#container div").each(function()
  {
	  if ($(this).attr("id") && ($(this).attr("id").indexOf("user_") == 0 || $(this).attr("id").indexOf("candidate_") == 0 || $(this).attr("id").indexOf("recruiter_") == 0))
	  {
	    revealItem("destroy_"+$(this).attr("id"), $(this).attr("id"));
	  }
  });
})