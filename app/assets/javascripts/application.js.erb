$(document).ready(function()
{
	
	/* CHANGES THE SEARCH BAR APPEARANCE */
	
	$("#search_bar").click(function()
	{
		if ($("#search_bar_input").attr("value") == "<%= I18n.t(:search_bar_value) %>") {
		  $("#search_bar_input").css("color","#acacb3");
		}
	})	
	$("#search_bar").keydown(function()
	{
		if ($("#search_bar_input").attr("value") == "<%= I18n.t(:search_bar_value) %>") {
		  $("#search_bar_input").attr("value","");
		  $("#search_bar_input").css("font-style","normal");
		  $("#search_bar_input").css("color","#444");
		}
	})
	$("#search_bar").focusout(function()
	{
	  if ($("#search_bar_input").attr("value") == "" || $("#search_bar_input").attr("value") == "<%= I18n.t(:search_bar_value) %>") {
  	  $("#search_bar_input").css("font-style","italic");
  	  $("#search_bar_input").css("color","#7c7777");
  	  if ($("#search_bar_input").attr("value") == "") {
  	    $("#search_bar_input").attr("value","<%= I18n.t(:search_bar_value) %>");
      }
    }
	})
	
})