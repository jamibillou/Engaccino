function displayEditForm(model,id) {
  $.ajax({
	url: '../'+model+'s/'+id+'/edit',
	success: function(data) {
		$('#'+model+'_line'+id).html(data);
	}
  });
}

function cancelUpdate(model) {
  $.ajax({
  	url: 'showpart',
  	type: "POST",
  	data: {model: "resume_"+model},
  	success: function(data) {
  		$('#'+model).html(data);
  	}
  });  
}

