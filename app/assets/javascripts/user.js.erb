$(document).ready(function()
{
	//Initialize the bars style
	var arrayBarsUser = new Array(Array("signup_email_input","user.new.email_field"),
										 Array("signup_password_input","user.new.password_field"),
										 Array("signup_confirmation_input","user.new.confirmation_field"));
	loopBars(arrayBarsUser);
  
  /* HIDES THE FIRST STEP OF THE SIGNUP PROCESS AND REVEALS THE SECOND ONE */
  
  $("#signup_form_1_submit").click(function()
