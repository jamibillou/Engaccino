$(document).ready(function()
{
  // CUSTOMS THE SIGNUP FORMS
  customForm("user_new_form","user.");
  customForm("user_signup_form","user.");
  customForm("user_edit_form","user.");
  
  $("#country_full_text").autocomplete(
	{
		source:"/ajax/countries",
	   	autoFocus: true,
	   	minLength: 2,
	   	close: function()
	   	{
	   		$.getJSON("/ajax/code?country="+$("#country_full_text").val(),
		    function(data)
		    {
		    	$("#country").val(data.code);
		    })
	   	}
  });

  // SHOULD ONLY BE DONE ON THE USER INDEX PAGE
  // REVEALS TRASH LINKS WHEN MOUSE OVER CARD BLOCKS
  <% User.all.each do |user| %>
    revealItem("destroy_user_<%= user.id %>","user_<%= user.id %>");
  <% end %>
})