$(document).ready(function()
{
  // CUSTOMS THE SIGNUP FORMS
  customForm("signup_form_1","user.new.");
  customForm("signup_form_2","user.new.");
  customForm("edit_form","user.edit.");
  
	$("#signup_country_full_text_field").autocomplete(
	{
		source:"/ajax/countries",
   	autoFocus: true,
   	minLength: 2,
   	close: function()
   	{
   		$.getJSON("/ajax/code?country="+$("#signup_country_full_text_field").val(),
	    function(data)
	    {
		    $("#signup_country_field").val(data.code);
	    })
   	}
  });
  
  // SUBMITS THE SIGNUP FORMS
  submitForm("signup_form_1","signup_form_1_submit","user.new.");
  submitForm("signup_form_2","signup_form_2_submit","user.new.");
  submitForm("edit_form","edit_form_submit","user.edit.");
})