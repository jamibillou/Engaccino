<% @interpersonal_skill_candidates = candidate.interpersonal_skill_candidates %>
<h1>
  <%= t('interpersonal_skills.title').remove_accents.upcase %>
  <%= link_to_function "#{t('add').upcase} +", "showForm('interpersonal_skill_candidate', ['show_top'])",
  					   :id => "link_add_interpersonal_skill_candidate", :class => "add_link #{' red underline' if @interpersonal_skill_candidates.empty?}" if candidate == current_user %>
  <div class='loader' id='professional_skill_candidate_loader'><%= image_tag "loader.gif" %></div>
</h1>
<div id='new_interpersonal_skill_candidate' class='hidden'></div> 
<% unless @interpersonal_skill_candidates.empty? %>
  <% @interpersonal_skill_candidates.each do |interpersonal_skill_candidate| %>
    <div id='interpersonal_skill_candidate_<%= interpersonal_skill_candidate.id %>' class='show_interpersonal_skill_candidate'>
   	  <%= render 'interpersonal_skill_candidates/show', :interpersonal_skill_candidate => interpersonal_skill_candidate %>
   	</div>
  <% end %>
<% else %>
  <div class='add_some'><%=t 'interpersonal_skills.add_some' %></div>
<% end %>