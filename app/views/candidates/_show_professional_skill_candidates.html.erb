<% professional_skill_candidates = candidate.professional_skill_candidates.order('experience DESC') %>
<div class='loader' id='professional_skill_candidate_loader'><%= image_tag 'loader.gif' %></div>
<h1>
  <div class='label'><%= t('professional_skills.title').remove_accents.upcase %>
    <%= link_to_function "#{t('add').upcase} +", "showForm('professional_skill_candidate', ['show_top','candidate_professional_skills'])",
						 :id => 'link_add_professional_skill_candidate', :class => "add_link #{' red' if candidate.no_pro_skill?}" if candidate == current_user %>
  </div>
  <div class='experience'><%= t('professional_skills.experience').remove_accents.upcase %></div>
  <div class='level'><%= t('professional_skills.level').remove_accents.upcase %></div>
</h1>
<div id='new_professional_skill_candidate' class='hidden'></div> 
<% unless candidate.no_pro_skill? %>
  <% professional_skill_candidates.each do |professional_skill_candidate| %>
  	<div id='professional_skill_candidate_<%= professional_skill_candidate.id %>'>
   		<%= render 'professional_skill_candidates/show', :candidate => candidate, :professional_skill_candidate => professional_skill_candidate %>
   	</div>
  <% end %>
<% else %>
  <div class='add_some'><%=t 'professional_skills.add_some' %></div>
<% end %>