<div id="user_<%= @candidate.id %>" class="card_block left">
  <div class="head">
    <div class="identity">
      <div class="photo left"><%=t 'candidates.profile_photo' %></div>
      <div class="name_place">
        <h2><%= @candidate.first_name %><br /><%= @candidate.last_name %></h2> 
        <%= unless @candidate.city.blank? then @candidate.city else t('candidates.city') end %>, 
        <%= unless @candidate.country.blank? then display_country(@candidate.country) else t('candidates.country') end %>        
      </div>
    </div>
    <div class="job">
      <h2><%=t 'candidates.role' %></h2>
      at <%=t 'candidates.company' %>
      <div class="status">
        <%=t "candidates.#{@candidate.status}_status" %>
      </div>
    </div>
  </div>
  <div class="experience">
    <h2><%= t('candidates.experience').remove_accents.upcase %></h2>
    <h3><%=t 'candidates.years' %></h3>
  </div>
  <div class="degree">
    <h2><%= t('candidates.degree').remove_accents.upcase %></h2>
    <%=t 'candidates.degree_name' %>
  </div>
  <div class="pro_skills">
    <h2><%= t('candidates.professional_skills').remove_accents.upcase %></h2>
    <p><%=t 'candidates.skill' %> 1</p>
    <p><%=t 'candidates.skill' %> 2</p>
    <p><%=t 'candidates.skill' %> 3</p>
  </div>
  <div class="contact">
    <h2><%= "#{t('candidates.contact')} #{@candidate.first_name}" %></h2>
    <p><%= @candidate.email %></p>
    <p><%= @candidate.phone %></p>
    <div class="buttons">
      <a class="small slightly_round grey button left margin_right" href="#">Fb</a>
      <a class="small slightly_round grey button left margin_right" href="#">Li</a>
      <a class="small slightly_round grey button left" href="#">Tw</a>
    </div>
  </div>
</div>