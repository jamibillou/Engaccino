<div id="share_edit">
  <div class="buttons">
    <%= link_to t('candidates.show.next_profile'), candidate_path(candidate.id+1), :class => 'slightly_round blue button margin_right' %>
    <%= link_to t('candidates.show.share_profile'), '#', :class => 'slightly_round grey button' %>
  </div>
  <div id="completion_container" class="slightly_round">
    <div id="completion_bar_empty" class="slightly_round">
      <div id="completion_bar_full" class="slightly_round" style="width: <%= 3*candidate.profile_completion %>px;"></div>
    </div>
    Your profile is <%= candidate.profile_completion %>% complete<%= link_to "What's missing?", '#' %>
  </div>
</div>