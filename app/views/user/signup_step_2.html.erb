<div id="signup_part_2">
  <%= render 'signup_speed_up' %>
  <%= form_for @user, :url => { :action => :create }, :html => { :id => 'signup_form_2' } do |f| %>
    <%= f.hidden_field :email, :value => params[:user][:email] %>
    <%= f.hidden_field :password, :value => params[:user][:password] %>
    <% signup_blocks.each do |block| %>
      <%= render :partial => 'signup_block', :locals => { :block => block, :f => f } %>
  	<% end %>
  	<%= f.submit t('user.new.view_profile'), :class => 'hidden' %>
  <% end %>
</div>
<%= link_to t('user.new.view_profile'), '#', :id => 'signup_form_2_submit', :class => 'button blue round center' %>
