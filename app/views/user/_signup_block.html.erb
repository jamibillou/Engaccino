<div id="<%= block[:id] %>" class="white_block">
  <h2><%=t "user.new.#{block[:id]}" %></h2>
  <% block[:fields].each do |field| %>
  	<% case field[:type] %>
    	<% when "text" %>
        <%= f.text_field field[:id], :value => t("user.new.signup_#{field[:id]}_field"), :id => "signup_#{field[:id]}_field", :class => 'field margin_right' %>
      <% when "select" %>
        <% options = [] %>
        <% field[:options].each_with_index do |option, index| %>
          <%  options[index] = [t("user.new.#{option}_status"), index] %>
        <% end %>
        <%= select_tag(field[:id], options_for_select(options)) %>
    <% end %>
    <% if field[:id].include?('timeframe') %>
      <%= link_to '+', '#', :class => 'slightly_round blue button' %>
    <% end %>
    <% if field[:new_line] %>
      <br />
    <% end %>
  <% end %>
</div>