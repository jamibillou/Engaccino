<%= form_for education, :remote => true, :html => { :id => 'education_edit_form_'+education.id.to_s , :class => 'education_edit_form'} do |f| %>
  <input type='hidden' name='_method' value='PUT' />
  <div class="ee_date">
  	<%= f.text_field :start_month, :class => 'mini_edit_field' %>
  	<%= f.text_field :start_year, :class => 'small_edit_field' %>
  	 - 
    <%= f.text_field :end_month, :class => 'mini_edit_field' %>
  	<%= f.text_field :end_year, :class => 'small_edit_field' %>
  </div>
  <div class="ee_details">
  	<%= f.fields_for :degree do |degree_builder| %>
  	  <%= degree_builder.fields_for :degree_type do |degree_type_builder| %>
  	    <%= degree_type_builder.text_field :label, :class => 'edit_field small_margin' %>
  	  <% end %>
  	  <br />
  	  <%= degree_builder.text_field :label, :class => 'edit_field small_margin' %>
  	<% end %>
  	<br />
  	<%= f.fields_for :school do |school_builder| %>
  	  <%= school_builder.text_field :name, :class => 'edit_field margin' %>
  	<% end %>
  	<%= f.text_area :description, :class => 'textarea_edit' %>
  	<div class="error_messages" id="errors<%= education.id %>"></div>
  	<%= link_to_function t('cancel'), "hideEditForm('education','#{education.id}')", :class => 'grey button' %>
  	&nbsp;
  	<%= f.submit t('submit') %>
  	<div class="small_trash_link"><%= link_to "#{t('delete')}#{t('_?')}", education, :method => :delete,
  	                                                         		                     :confirm => "#{t('delete')}#{t('_?')}",
  	                                                         		                     :title => "#{t('delete')}#{t('_!')}" %></div>
  </div>
<% end %>