<%= form_for @certificate_candidate, :remote => true do |f| %>
  <div class='certificate_candidate'>
  	<div class="label">
	    <%= f.fields_for :certificate do |certificate_builder| %>
	  	  <h2><%= certificate_builder.text_field :label, :class => 'edit_field margin' %></h2>
	    <% end %>
	</div>
    <div class="level">
    	<h3><%= f.text_field :level_score, :class => 'small_edit_field' %></h3>
    </div>
  <div class="error_messages" id="errors_new_certificate_candidate"></div><br/>
    <%= link_to_function t('cancel'), "hideForm('certificate_candidate')", :class => 'grey button' %>
    &nbsp;
    <%= f.submit t('submit') %>
  </div>  
<% end %>