<% professional_skill = professional_skill_candidate.professional_skill %>
<div <%= if @candidate == current_user then "id='show_professional_skill_candidate_#{professional_skill_candidate.id}' class='show_professional_skill_candidate editable'" else "class='show_professional_skill_candidate'" end %>>
  <div class='label_description'>
    <h2><%= professional_skill.label %></h2>
    <p><%= professional_skill_candidate.description %></p>
  </div>
  <div class='experience'>
    <h3><%= pluralize(professional_skill_candidate.experience, t('yr')) %></h3>
  </div>
  <div class='level'>
    <h3><%= t("skills.#{professional_skill_candidate.level}") %></h3>
  </div>
</div>
<% if current_user == @candidate %>
  <div id='edit_professional_skill_candidate_<%= professional_skill_candidate.id %>' class='hidden edit_professional_skill_candidate'>
    <%= render 'professional_skill_candidates/edit_form', :professional_skill_candidate => professional_skill_candidate %>   	
  </div>
<% end %>