<% professional_skill = professional_skill_candidate.professional_skill %>
<div <%= if @candidate == current_user then "id='show_professionalSkillCandidate_#{professional_skill_candidate.id}' class='show_professional_skill show_professional_skill_edit'" else "class='show_professional_skill'" end %>>
  <div class='label_description'>
    <h2><%= professional_skill.label %></h2>
    <p><%= professional_skill_candidate.description %></p>
  </div>
  <div class='experience'>
    <h3><%= "#{professional_skill_candidate.experience} #{t('candidates.years')}" %></h3>
  </div>
  <div class='level'>
    <h3><%= professional_skill_candidate.level.humanize %></h3>
  </div>
</div>
<% if current_user == @candidate %>
  <div id='edit_professionalSkillCandidate_<%= professional_skill_candidate.id %>' class='hidden edit_professionalSkillCandidate'>
    <%= render 'professional_skill_candidates/edit_form', :professional_skill_candidate => professional_skill_candidate %>   	
  </div>
<% end %>