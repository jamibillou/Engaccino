<%= form_for :professional_skill_candidate, :remote => true, :html => { :id => 'professionalSkill_edit_form_'+professional_skill_candidate.id.to_s , :class => 'professional_skill_edit_form'} do |f| %>
  <input type='hidden' name='_method' value='PUT' />
  <div class='show_professional_skill'>
    <div class='label_description'>
      <h2><%= f.text_field :label, :class => 'edit_field' %></h2>
      <%= f.text_area :description, :class => 'textarea_edit' %>
    </div>
    <div class='experience'>
      <h3><%= f.text_field :experience, :class => 'mini_edit_field' %> yrs</h3>
    </div>
    <div class='level'>
      <h3><%= f.text_field :level, :class => 'small_edit_field' %></h3>
    </div>
    <div class='ee_details'>
	    <div class="error_messages" id="errors<%= professional_skill_candidate.id %>"></div>
	      <%= link_to_function t('cancel'), "hideEditForm('professionalSkill','#{professional_skill_candidate.id}')", :class => 'grey button' %>
	      &nbsp;
	      <%= f.submit t('submit') %>
	      <div class="small_trash_link"><%= link_to "#{t('delete')}#{t('_?')}", professional_skill_candidate, :method => :delete,
	                                                               		                    :confirm => "#{t('delete')}#{t('_?')}",
	                                                               		                    :title => "#{t('delete')}#{t('_!')}",
	                                                               		                    :remote => true %></div>
  	</div>
  </div>
<% end %>