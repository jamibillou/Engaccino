<%= form_for experience, :remote => true, :html => { :id => "experience_edit_form_#{experience.id.to_s}", :class => 'experience_edit_form' } do |f| %>
  <input type='hidden' name='_method' value='PUT' />
  <div class='edu_exp_date'>
  	<%= f.text_field :start_month, :class => 'mini_edit_field' %>
  	<%= f.text_field :start_year, :class => 'small_edit_field' %>
  	 - 
	  <%= f.text_field :end_month, :class => 'mini_edit_field' %>
  	<%= f.text_field :end_year, :class => 'small_edit_field' %>
  	<br />
  </div>
  <div class='edu_exp_details'>
      <%= f.text_field :role, :class => 'edit_field small_margin' %>
      <span class='check_box'><%= f.check_box :current %><%= t('experiences.current').downcase %></span>
      <br />
      <%= f.fields_for :company do |company_builder| %>
      	<%= company_builder.text_field :name, :class => 'edit_field margin' %>
      <% end %>
      <%= f.text_area :description, :class => 'textarea_edit' %>
      <div class='error_messages' id='errors_experience<%= experience.id %>'></div>
      <%= link_to_function t('cancel'), "hideForm('experience','#{experience.id}')", :class => 'grey button' %>
      &nbsp;
      <%= f.submit t('submit') %>
      <div class='small_trash_link right'><%= link_to "#{t('delete')}#{t('_?')}", experience, :method => :delete,
                                                               		                      :confirm => "#{t('delete')}#{t('_?')}",
                                                               		                      :title => "#{t('delete')}#{t('_!')}",
                                                               		                      :remote => true %></div>
  </div>
<% end %> 
